---
import ogImage from "@images/setupImage2.jpg";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="About Me" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<meta property="og:image:alt" content="ennbou.com img" />
		<meta property="og:site_name" content="EnnBou" />
		<meta property="og:url" content="https://ennbou.com/portfolio/">
		<meta property="og:type" content="website">
		<meta property="og:image" content={`https://ennbou.com${ogImage.src}`}/>
		<meta property="og:title" content="EnnBou">
		<meta property="og:description" content="Bouchaib">

		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="ennbou.com">
		<meta property="twitter:url" content="https://ennbou.com/portfolio/">
		<meta name="twitter:title" content="EnnBou">
		<meta name="twitter:description" content="Bouchaib">
		<meta name="twitter:image" content=`https://ennbou.com${ogImage.src}`>

		<title>{title}</title>
	</head>
	<body class="font-roboto">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
