---
export interface Props {
  project: {
    title: string;
    name: string;
    description: string;
    repositoryLink?: string;
    isPrivate?: boolean;
    isReady?: boolean;
    productionLink?: string;
    technologies: string[];
  };
}

const { project } = Astro.props as Props;
const { title, name, description, repositoryLink, isPrivate, isReady, productionLink, technologies } = project;
---

<a href={isReady === false ? "#" : repositoryLink} class:list={[repositoryLink ? "" : "pointer-events-none" ]}>
  <div class="bg-gray-800 rounded-md shadow-md text-white hover:scale-105 transition-transform duration-300 h-full flex flex-col">
    <div class="text-lg p-4 flex flex-wrap">
      {title}

      {isReady === false && <span class=" bg-purple-500 text-white px-2 mx-2 rounded">coming soon</span>}
      {isPrivate && <span class=" bg-red-500 text-white px-2 mx-2 rounded">private</span>}
     
    </div>
    <div class="h-0.5 bg-slate-500 w-100"></div>
    <div class="text-2xl p-4 pb-0">{name}</div>
    <div class="text-lg p-4 flex-grow">{description}</div>
    <div class="p-2">
      {
        technologies.map((technology) => (
            <span class="inline-block bg-gray-500 text-white px-2 m-1 rounded-md">{technology}</span>
        ))
      }
    </div>
  </div>
</a>
